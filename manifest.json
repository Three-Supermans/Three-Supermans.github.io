{
  "manifest_version": 2,
  "name": "Microsoft ToDo-Lists",
  "version": "1.0",
  "description": "A Browser Plugin For Microsoft ToDo-Lists",
  "icons": {
    "48": "assets/logo48_48.png",
    "16": "assets/logo16_16.png"
  },
  "browser_action": {
    "default_icon": "assets/logo16_16.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval' https://cdn.bootcss.com; object-src 'self' ;"
}
